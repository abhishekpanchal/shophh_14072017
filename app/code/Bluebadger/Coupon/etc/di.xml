<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Bluebadger\Coupon\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Bluebadger\Coupon\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">CouponLogger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Bluebadger\Coupon\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Bluebadger\Coupon\Controller\Checkout\Cart\CouponPost">
        <arguments>
            <argument name="logger" xsi:type="object">Bluebadger\Coupon\Logger\Logger</argument>
        </arguments>
    </type>
    <preference for="Magento\Checkout\Controller\Cart\CouponPost" type="Bluebadger\Coupon\Controller\Checkout\Cart\CouponPost"/>
    <type name="Bluebadger\Coupon\Plugin\AroundCouponManagement">
        <arguments>
            <argument name="logger" xsi:type="object">Bluebadger\Coupon\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Magento\Quote\Model\CouponManagement">
        <plugin name="bluebadgerCouponSetCouponCode" type="Bluebadger\Coupon\Plugin\AroundCouponManagement"/>
    </type>
</config>